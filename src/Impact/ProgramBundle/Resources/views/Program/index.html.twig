{% extends '::base.html.twig' %}

{% block body -%}
    <div class="page-header">    
        <h1 class="">Program list</h1>
    </div>
    <a href="{{ path('program_new') }}" class="btn btn-primary">Create a new entry</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('program_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td><a href="{{ path('program_show', { 'id': entity.id }) }}">{{ entity.title }}</a></td>
                <td>{{ entity.description }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('program_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('program_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

            
    {% endblock %}
